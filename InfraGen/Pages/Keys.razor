@page "/keys"
@using InfraGen.Data;
@inject UserContext UserContext;

<h3>Keys</h3>

<EditForm Model="@UserContext" OnValidSubmit="@Save">
    <div class="flex-column justify-content-center">
        <div class="mb-3 row">
            <label for="nameInput" class="col-sm-3 col-form-label">Name </label>
            <div class="col-sm-9">
                <InputText type="text" @bind-Value="UserContext.User.Info.Name" class="form-control" id="nameInput"></InputText>
            </div>
        </div>

        <div class="mb-3 row">
            <label for="adoPatInput" class="col-sm-3 col-form-label">Azure DevOps PAT </label>
            <div class="col-sm-9">
                <InputText type="text" @bind-Value="UserContext.User.Credentials.AdoPAT" class="form-control" id="adoPatInput"></InputText>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-primary" disabled="@Saving">
                Save
            </button>
        </div>
    </div>
    
</EditForm>



@code {

    [Parameter]
    public bool Saving { get; set; } = false;

    private async void Save()
    {
        Saving = true;
        StateHasChanged();

        await UserContext.UpdateUserInfo();
        await UserContext.UpdateUserCredentials();

        Saving = false;
        StateHasChanged();
    }

}   
